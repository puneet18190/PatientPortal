<h1>Vitals</h1>
<div class = "row">
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
   <div class = "col-sm-6 col-md-3">
      <div class = "thumbnail">
         <%= line_chart Heartbeat.where(:user_id => current_user.id).group("date(heartbeats.date)").average(:count),xtitle: "Date", ytitle: "Beats per Minute"%>
         
      </div>

      <div class = "caption">
         <h3>Heartbeats</h3>
         <p>
            <a href = "<%= heartbeats_path %>" class = "btn btn-primary" role = "button">
               Record Heartbeat
            </a>
         </p>
      </div>
   </div>

   <div class = "col-sm-6 col-md-3">
      <div class = "thumbnail">
         <%= line_chart Temperature.where(:user_id => current_user.id).group("date(temperatures.date)").average(:temperature),xtitle: "Date", ytitle: "Temperature"%>
      </div>

      <div class = "caption">
         <h3>Temperatures</h3>
         <p>
            <a href = "<%= temperatures_path %>" class = "btn btn-primary" role = "button">
               Record Temperature
            </a>
         </p>

      </div>
   </div>

   <div class = "col-sm-6 col-md-3">
      <div class = "thumbnail">
         <%= line_chart Weight.where(:user_id => current_user.id).group("date(weights.date)").average(:weight),xtitle: "Date", ytitle: "Weight"%>
      </div>

      <div class = "caption">
         <h3>Weights</h3>
         <p>
            <a href = "<%= weights_path %>" class = "btn btn-primary" role = "button">
               Record Weight
            </a>
         </p>

      </div>
   </div>

   <div class = "col-sm-6 col-md-3">
      <div class = "thumbnail">
        <%= line_chart [
  {name: "Systolic", data: Bloodpressure.where(:user_id => current_user.id).group("date(bloodpressures.date)").average(:systolic)},
  {name: "Dystolic", data: Bloodpressure.where(:user_id => current_user.id).group("date(bloodpressures.date)").average(:dystolic)}
  ] %>
      </div>

      <div class = "caption">
         <h3>Blood-Pressure</h3>
         <p>
            <a href = "<%= bloodpressures_path %>" class = "btn btn-primary" role = "button">
               Record Blood-Pressure
            </a>
         </p>

      </div>
   </div>
    <div class = "col-sm-6 col-md-3">
      <div class = "thumbnail">
<%= line_chart [
  {name: "Fasting", data: Bloodsugar.where(:user_id => current_user.id).group("date(bloodsugars.date)").average(:fasting)},
  {name: "Non-Fasting", data: Bloodsugar.where(:user_id => current_user.id).group("date(bloodsugars.date)").average(:nonfasting)}
] %>
      </div>

      <div class = "caption">
         <h3>Blood-Sugar</h3>
         <p>
            <a href = "<%= bloodsugars_path %>" class = "btn btn-primary" role = "button">
               Record Blood-Sugar
            </a>
         </p>

      </div>
   </div>

</div>